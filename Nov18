	//write a void method named displayArray that takes an array of integers as a parameter, 
	//and then it will display the contents of that taken array
	
	public static void displayArray(int [] takenArray) {
	for (int index = 0; index < takenArray.length; index++)
	{
		//at each index, display the value that is stored at the index
		System.out.printf("%d\t", takenArray[index]);
		
	}
	System.out.println();
	
	}
	
	//Do overloading for the method displayArray
	
	public static void displayArray(double [] takenArray) {
	for (int index = 0; index < takenArray.length; index++)
	{
		//at each index, display the value that is stored at the index
		System.out.printf("%.2f\t", takenArray[index]);
		
	}
	System.out.println();
	
	}
	public static void displayArray(char [] takenArray) {
		for (int index = 0; index < takenArray.length; index++)
		{
			//at each index, display the value that is stored at the index
			System.out.printf("%c\t", takenArray[index]);
			
		}
		System.out.println();
		
		}
	public static void displayArray(String [] takenArray) {
		for (int index = 0; index < takenArray.length; index++)
		{
			//at each index, display the value that is stored at the index
			System.out.printf("%s\t", takenArray[index]);
			
		}
		System.out.println();
		
		}
	//write a void method named addTOArray that takes an integer array and then it will add 10 to every element of that taken array
	//apply the overloading so addTo Array works with the double arrays
	public static void addTOArray (int [] takenArray) {
	
		for (int index = 0; index < takenArray.length; index++)
		{
			//at each index, add 10 to display the value that is stored at the index
		
			takenArray [index] += 10;
		}
		}
	public static void addTOArray (double [] takenArray) {
		
		for (int index = 0; index < takenArray.length; index++)
		{
			//at each index, add 10 to display the value that is stored at the index
		
			takenArray [index] += 10;
		}	
		}
	//write a void method named loadArray that takes an array of integers as a parameter,
	//and then it will prompt the user to insert values and it will store these values into that taken array
	//Goal: Read a set of values and store them in the takenArray
	public static void loadArray(int [] takenArray)
	{
		for(int index = 0; index < takenArray.length; index++)
		{
			System.out.print("Enter an integer value: ");
			takenArray [index] = input.nextInt();
		}
	}
	
	public static void loadArray(double[] takenArray)
	{
		for(int index = 0; index < takenArray.length; index++)
		{
			System.out.print("Enter an integer value: ");
			takenArray [index] = input.nextDouble();
		}
	}
	public static void loadArray(char [] takenArray)
	{
		for(int index = 0; index < takenArray.length; index++)
		{
			System.out.print("Enter an integer value: ");
			takenArray [index] = input.next().charAt(0);
		}
	}
	public static void loadArray(String [] takenArray)
	{
		for(int index = 0; index < takenArray.length; index++)
		{
			System.out.print("Enter an integer value: ");
			takenArray [index] = input.next();
		}
	}
	
	
}//end class
